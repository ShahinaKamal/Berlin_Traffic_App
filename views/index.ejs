<%- include("./partials/header") %>


<div class="container" style="margin-top: 2rem">
    <p class=" display-5 py-3 topBar" >Traffic Incident List</p>
    <div class="list-group">
        <%   incidents.forEach(function(incident){%>
        <a id="indexListItem" href="/incidents/<%= incident._id %>"
            class="list-group-item list-group-item-action flex-column align-items-start ">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">
                    <%if (incident.type == 1) { %>
                        <span class="severity capitalize"> Jam </span>
                    <% } %>
                    <%if (incident.type == 2) { %>
                        <span class="severity capitalize"> Dangerous COnditions </span>
                    <% } %>
                    <%if (incident.type == 3) { %>
                        <span class="severity capitalize">Lane closed </span>
                    <% } %>
                </h6>
                <small class="severity"> delay : <%=  incident.delay %></small>
            </div>
            <p class="mb-1"><%=  incident.details %></p>
            <small>magnitude : <%=  incident.magnitude %></small>
        </a>
        <%}); %>
    </div>
</div>
<%- include("./partials/footer") %>